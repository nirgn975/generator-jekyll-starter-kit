{
  "name": "<%= projectName %>",
  "version": "1.0.0",
  "description": "<%= projectDescription %>",
  "main": "index.js",
  "scripts": {
    "gulp": "gulp",
    "gulp deploy": "gulp deploy"
  },
  "author": "<%= githubUsername %>",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.15.0",
<% if (includeFirebase) { -%>
    "firebase-tools": "^3.0.7",
<% } -%>
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-replace": "^0.5.4",
<% if (includeGithub) { -%>
    "gulp-gh-pages": "^0.5.4",
<% } -%>
    "gulp-htmlmin": "2.0.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-load-plugins": "1.2.4",
<% if (includePug) { -%>
    "gulp-pug": "3.0.4",
<% } -%>
<% if (includeSass || includeScss) { -%>
    "gulp-sass": "^2.3.2",
<% } -%>
    "gulp-shell": "0.5.2",
    "gulp-uglify": "^2.0.0",
<% if (includeTravis) { -%>
    "lighthouse": "^1.2.0",
<% } -%>
<% if (includeSW) { -%>
    "sw-precache": "^4.0.0",
    "sw-toolbox": "^3.2.1",
<% } -%>
    "run-sequence": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "<%= githubUrl %>"
  }
}
