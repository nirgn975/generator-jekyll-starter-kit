sudo: required
dist: trusty

addons:
  apt:
    sources:
      - google-chrome
    packages:
      - google-chrome-stable

language: node_js
node_js:
  - "8"

before_install:
  - npm install npm -g
  - bundle update

install:
  - npm install
  - bundle install

  # Install lighthouse
  - npm install -g lighthouse local-web-server
  - export DISPLAY=:99.0
  - sh -e /etc/init.d/xvfb start

script:
  - npm run build
  - cd _site && ws&
  - lighthouse http://127.0.0.1:8000 --output=json --output-path=./validate/log.json
  - node ./validate/checklog.js ./validate/log.json
